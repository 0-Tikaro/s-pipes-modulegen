    <!-- ################# STDOUT ####################### -->

    <!-- Send debug messages to System.out -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>


            <pattern>%date{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{30} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for our app -->
    <logger name="cz.cvut.sempipes" level="TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="cz.cvut.sempipes.config.RDFMediaTypeConverter" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="cz.cvut.sempipes.modules.BindWithConstantModule" level="TRACE" additivity="false">
    <appender-ref ref="STDOUT"/>
    </logger>


    <!-- Restrict logging of the Sesame HTTP client (used to connect to remote repositories -->
    <logger name="org.openrdf.http" level="WARN" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Restrict logging of Spring -->
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Restrict logging of logback -->
    <logger name="ch.qos.logback" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- By default, the level of the root level is set to DEBUG -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>